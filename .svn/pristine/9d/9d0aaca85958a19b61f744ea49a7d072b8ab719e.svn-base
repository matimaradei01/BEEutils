/* tooltip claves */

.tarjeta {
    position: relative;
}
  
.tarjeta[value]:hover::before {
    content: attr(value);
    color: white;
    background-color: #000;
    position: absolute;
    z-index: 2;
    top: 0px;
    left: 156px;
    padding: 8px 20px;
    width: auto;
    border-radius: 6px;
    white-space: nowrap;
}
  
.tarjeta[value]:hover::after {
    content: "";
    position: absolute;
    z-index: 2;
    width: 15px; 
    height: 15px;
    border-radius: 50%;
    background-color: #000;
    margin: -22px 76px;
}

